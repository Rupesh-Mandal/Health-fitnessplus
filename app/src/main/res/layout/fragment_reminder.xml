<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:sweet="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theam_color">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <RelativeLayout
            android:id="@+id/relaa1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/set_water"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/set_water" />

            <ImageView
                android:id="@+id/butoon_plus"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@+id/set_water"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-60dp"
                android:layout_marginRight="25dp"
                android:background="@mipmap/add_22" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@+id/relaa1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp">

            <ImageView
                android:id="@+id/set_medicion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/set_medication" />

            <ImageView
                android:id="@+id/butoon_plus1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_below="@+id/set_medicion"
                android:layout_alignParentRight="true"
                android:layout_marginTop="-60dp"
                android:layout_marginRight="25dp"
                android:background="@mipmap/add_22" />
        </RelativeLayout>


    </RelativeLayout>
    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
